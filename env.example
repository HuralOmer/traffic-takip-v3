# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Security
SITE_SALT=your-secret-salt-here
JWT_SECRET=your-jwt-secret-here
HMAC_SECRET=your-hmac-secret-here

# Database - PostgreSQL (Transactional)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=universal_tracking
PG_USERNAME=postgres
PG_PASSWORD=password
PG_SSL=false
PG_POOL_MIN=2
PG_POOL_MAX=10

# Cache - Redis (Real-time/Presence)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ut:

# Analytics - ClickHouse (OLAP)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_SSL=false

# External Services
GEOIP_API_KEY=your-geoip-api-key
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Health Check
HEALTH_CHECK_TIMEOUT=5000
